<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:id="@+id/scrollview2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/camview">

        <ImageView
            android:id="@+id/camera_image"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:contentDescription="@string/app_name" />

        <Button
            android:id="@+id/boutonSMS"
            android:text="Envoyer par SMS"
            android:layout_below="@id/camera_image"
            android:layout_alignEnd="@+id/camera_image"
            android:layout_marginLeft="5dp"
            android:onClick="onClick"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/sms"/>

        <Button
            android:id="@+id/boutonMail"
            android:text="Envoyer par mail"
            android:layout_below="@id/camera_image"
            android:onClick="onClick"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/email"/>

    </RelativeLayout>

</ScrollView>